<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Horizontal container for Date and Delete button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="4dp"> <!-- Reduce padding -->

        <TextView
            android:id="@+id/symptomDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date Added"
            android:textSize="12sp"
            android:layout_weight="1"
            android:fontFamily="@font/glikerblackfont"
            android:paddingEnd="8dp"/>

        <ImageButton
            android:id="@+id/deleteButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/deletebutton"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    </LinearLayout>

    <TextView
        android:id="@+id/symptomTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Symptom"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingTop="2dp"
        android:fontFamily="@font/glikerblackfont"
        android:paddingBottom="2dp"/>

    <TextView
        android:id="@+id/symptomDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="16sp"
        android:paddingTop="2dp"
        android:fontFamily="@font/glikerblackfont"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginTop="4dp"/>
</LinearLayout>