<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/LogRegBackgroundLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="270dp"
        android:layout_height="20dp"
        android:layout_gravity="start|top"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/glikerblackfont"
        android:text="Choose your pet's profile picture:"
        android:textColor="@color/black"
        android:translationY="-320dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:translationY="-320dp"
        android:layout_marginTop="10dp">


        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/DogButton"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="#00FFFFFF"
                android:src="@drawable/dogicon" />

        </LinearLayout>

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/caticon"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="#00FFFFFF"
                android:src="@drawable/caticon" />

        </LinearLayout>

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/rabbiticon"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="#00FFFFFF"
                android:src="@drawable/rabbiticon" />

        </LinearLayout>

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/snakeicon"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="#00FFFFFF"
                android:src="@drawable/snakeicon" />

        </LinearLayout>

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/addFromGalleryIcon"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="#00FFFFFF"
                android:src="@drawable/addfromgalleryicon" />

        </LinearLayout>




    </LinearLayout>