<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <!-- Horizontal layout for image and text -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Larger Pet Image -->
        <ImageView
            android:id="@+id/petIconImageView"
            android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerInside"
        android:contentDescription="@string/pet_image"
        android:layout_marginEnd="16dp" />

        <!-- Vertical layout for text (name and species) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="start"
            android:layout_alignParentTop="true">

            <!-- Pet Name -->
            <TextView
                android:id="@+id/petNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pet Name"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <!-- Pet Species -->
            <TextView
                android:id="@+id/petSpeciesTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pet Species"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
